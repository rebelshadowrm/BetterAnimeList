@model AnimeListViewModel
@{
    ViewData["Title"] = "AnimeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table id="anime-list" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th id="tabletitle" colspan="6">
                @Model.Member.Username's Table
            </th>
        </tr>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Type</th>
            <th>Rating</th>
            <th>Episode</th>
        </tr>
    </thead>
    <tbody>

            @foreach (var elem in Model.AnimeListItems)
            {
                <tr class="@(elem.StatusName.Replace(" ", string.Empty) + "-listitem")">
                    <td>@elem.Anime.Title</td>
                    <td> @elem.StatusName</td>
                    <td> @elem.Anime.TypeName</td>
                    <td data-sort="@elem.Rating"> @(elem.Rating == 0 ? "Unrated" : @elem.Rating.ToString())</td>
                    <td data-sort="@elem.Progress"> @(elem.Progress + '/' + @elem.Anime.Epcount == 0 ? "∞" : @elem.Anime.Epcount.ToString())</td>

                </tr>
            }
    </tbody>
</table>





